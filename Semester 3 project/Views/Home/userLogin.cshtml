
@{
    ViewBag.Title = "userLogin";
}

<div class="container col-xl-10 col-xxl-8 px-4 py-5">
    <div class="row align-items-center g-lg-5 py-5">
        <div class="col-lg-7 text-center text-lg-start">
            <h1 class="display-4 fw-bold lh-1 mb-3">Applicant Login Form</h1>
            <p class="col-lg-10 fs-4">Here as an Applicant you take your exam and view result Login with the user name and password given by the administrator </p>
        </div>
        <div class="col-md-10 mx-auto col-lg-5">
            @using (Html.BeginForm("userLogin", "Home", FormMethod.Post, new { @class = "p-4 p-md-5 border rounded-3 bg-light" }))
            {
                <div class="form-floating mb-3">
                    @Html.TextBox("Username", "", new { @class = "form-control", placeholder = "name@example.com" })
                    @Html.Label("Username", new { @class = "form-input-label" })
                </div>
                <div class="form-floating mb-3">
                    @Html.Password("Password", "", new { @class = "form-control", placeholder = "Password" })
                    @Html.Label("Password", new { @class = "form-input-label" })
                </div>
                <div class="checkbox mb-3">
                    <label>
                        <input type="checkbox" value="remember-me"> Remember me
                    </label>
                </div>
                <button class="w-100 btn btn-lg btn-success text-white" type="submit">Login</button>
            }
        </div>
    </div>
</div>
